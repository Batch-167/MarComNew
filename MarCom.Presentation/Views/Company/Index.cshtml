@model MarCom.ViewModel.CompanyViewModel
@{
    ViewBag.Title = "Company";
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")
<div class="panel panel-info">
    <div class="panel-heading">
        <div>
            <div>
                <table>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td col-lg-11></td>
                        <td>
                            <button type="button" id="btn-new" class="btn btn-primary btn-sm" style="width:60px">Add</button>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="col-lg-2">
                            @Html.DropDownListFor(model => model.Name, (IEnumerable<SelectListItem>)ViewBag.Company, "-Select Company Code-", new { @id = "Code", @class = "form-control" })
                        </td>
                        <td class="col-lg-3">
                            @Html.DropDownListFor(model => model.Name, (IEnumerable<SelectListItem>)ViewBag.Company1, "-Select Company Name-", new { @id = "Name", @class = "form-control" })
                        </td>
                        <td class="col-lg-3">
                            <div class="input-group">
                                <input class="form-control datepicker" id="Date" type="date" value="Created" />
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            </div>
                        </td>
                        <td class="col-lg-3">
                            <input id="Create" name="CompCreate" type="text" class="form-control text-box single-line" placeholder="Created By" />
                        </td>
                        <td>
                            <button type="button" id="btn-search" onclick="Search()" class="btn btn-default btn-sm" style="width:60px">Search</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12" id="table-list">
                <h3>  Loading... </h3>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" tabindex="-1" role="dialog" id="modal-input">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <h4 class="text-bold" id="title-panel"></h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



@section Scripts{
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    <script type="text/javascript">
        $(document).ready(function () {
            //   alert('Hi, this is me')
            GetList();

        });

        $("#btn-new").click(function () {
            $("#title-panel").html("Create New Company");
            $.ajax({
                url: '@Url.Action("Create", "Company")',
                type: 'get',
                success: function (result) {
                    $(".modal-body").html(result);
                    $(".modal").modal("show");
                }

            });
        });

        $("#btn-search").click(function Search() {
            var data = {
                code: $("#Code").val(),
                name: $("#Name").val(),
                create_date: $("#Date").val(),
                create_by: $("#Create").val(),

            };
            $.ajax({
                url: '@Url.Action("Filter","Company")',
                type: 'post',
                data: data,
                success: function (result) {
                    $("#table-list").html(result);
                },
                error: function (err) {
                    $("table-list").html(result);
                }
            });
        });

        function GetList() {
            $.ajax({
                url: '@Url.Action("List","Company")',
                type: 'get',
                success: function (result) {
                    $("#table-list").html(result);

                },
                error: function (err) {
                    $("#table-list").html(err);
                }
            });
        }

        function action(act, id, code) {
            $.ajax({
                url: '/Company/' + act,
                type: 'get',
                data: { id: id },
                dataType: 'html',
                success: function (result) {
                    $('#modal-input').find('.modal-body').html(result);
                    $('#title-panel').html(act+" Company "+code);
                    $('#modal-input').modal('show');
                },

                error: function (err) {
                    $('#table-list').tml(err);
                }
            });
        }

        $('#modal-input').on('submit', '#input-form', function () {
            var vUrl= $(this).attr('action');
            var vMethod= $(this).attr('method');
            var vData= $(this).serialize();
            $.ajax({
                url: vUrl,
                type: vMethod,
                data: vData,
                success: function (result) {
                    if (result.success) {
                        alert("Data change for "+result.entity.Name+" been saved!");
                        $('#modal-input').modal('hide');
                        GetList();
                    } else {
                        alert("Error! Change has not been saved. \n" + result.message);
                    }
                }
            });
            return false;
        });
    </script>
}