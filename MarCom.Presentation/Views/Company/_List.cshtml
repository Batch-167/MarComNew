@model IEnumerable<MarCom.ViewModel.CompanyViewModel>

@{
    int row = 0;

}


@foreach (var item in Model)
{
    <tr>
        <td>
            @(row += 1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_By)
        </td>
        <td>
            <button type="button" class="btn btn-details" data-id="@item.Id" title="Details" onclick="action('Details',@item.Id, '@item.Code')">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-edit btn-warning" data-id="@item.Id" title="Edit" onclick="action('Edit',@item.Id,'@item.Code')">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-delete btn-danger" data-id="@item.Id" title="Delete" onclick="action('Delete',@item.Id,'@item.Code')">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
        </td>
    </tr>
}
