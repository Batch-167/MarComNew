@model IEnumerable<MarCom.ViewModel.MenuViewModel>

@{
    int no = 0;
}
@foreach (var item in Model)
{
    <tr>
        @Html.HiddenFor(model => item.Name, new { @id = "Name" })
        <td class="text-center">
            <span>@(no += 1)</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Create_By)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Create_Date)
        </td>
        <td class="text-center">
            <div class="btn-group btn-group-sm">
                <button type="button" class="btn btn-success btn-search" data-id="@item.Id" title="Show" onclick="Action('Show',@item.Id,'@item.Name','@item.Code')">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-warning btn-edit" data-id="@item.Id" title="Edit Menu" onclick="Action('Edit',@item.Id,'@item.Name','@item.Code')">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-danger btn-delete" data-id="@item.Id" title="Delete" onclick="Action('Delete',@item.Id,'@item.Name','@item.Code')">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </td>
    </tr>
}


