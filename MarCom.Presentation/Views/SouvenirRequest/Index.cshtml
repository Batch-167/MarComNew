
@{
    ViewBag.Title = "List Souvenir Request";
}

@Scripts.Render("~/AdminLTE/plugins/datatables/css")

<div class="panel panel-warning">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-12">
                <table>
                    <tr>
                        <td colspan="7"></td>
                        <td>
                            <button type="button" id="btn-new" class="btn btn-primary btn-sm" title="Add New">Add</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-lg-2">
                            <input name="Code" type="text" class="form-control text-box single-line" placeholder="Transaction Code" />
                        </td>
                        <td class="col-lg-2">
                            <input name="Request_By" type="text" class="form-control text-box single-line" placeholder="Request By" />
                        </td>
                        <td class="col-lg-2">
                            <div class="input-group">
                                <input class="form-control datepicker" placeholder="Request Date" type="date"  />
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            </div>
                        </td>
                        <td class="col-lg-2">
                            <div class="input-group">
                                <input class="form-control datepicker" placeholder="Due Date" type="date"  />
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            </div>
                        </td>
                        <td class="col-lg-2">
                            <input name="Status" type="text" class="form-control text-box single-line" placeholder="Status" />
                        </td>
                        <td class="col-lg-1">
                            <div class="input-group">
                                <input class="form-control datepicker" placeholder="Created" type="date" />
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            </div>
                        </td>
                        <td class="col-lg-1">
                            <input name="Created_By" type="text" class="form-control text-box single-line" placeholder="Created By" />
                        </td>
                        <td>
                            <button type="button" id="btn-search" class="btn btn-warning btn-sm" title="Search">Search</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12" id="table-list">
    <h3>Loading...</h3>
</div>



<div class="modal fade" tabindex="-1" role="dialog" id="modal-input">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                    <h4 class="text-bold">Add Souvenir Request <button type="button" class="close glyphicon glyphicon-remove" data-dismiss="modal" aria-label="Close"></button></h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Scripts{
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    <script type="text/javascript">
        $(document).ready(function () {
            GetList();
        });

        $("#btn-new").click(function () {
            $.ajax({
                url: '@Url.Action("Add","SouvenirRequest")',
                type: 'get',
                success: function (result) {
                    $(".modal-body").html(result);
                    $(".modal").modal("show");
                }
            });
        });

        function GetList() {
            $.ajax({
                url: '@Url.Action("List", "SouvenirRequest")',
                type: 'get',
                success: function (result) {
                    $("#table-list").html(result);
                },
                error: function (err) {
                    $("#table-list").tml(err);
                }
            });
        }

        function AddItem() {
            $.ajax({
                url: '@Url.Action("AddItem", "SouvenirRequest")',
                type: 'get',
                success: function (result) {
                    $('#item-body').append(result);
                },
                error: function (err) {
                    $("#item-body").html(err);
                }
            });
        }

        function RemoveRow(obj) {
            $(obj).closest('tr').remove();
        }

        function action(act, id) {
            $.ajax({
                url: '/SouvenirRequest/' + act,
                type: 'get',
                data: { id: id },
                dataType: 'html',
                success: function (result) {
                    $('#modal-input').find('.modal-body').html(result);
                    $('#modal-input').modal('show');
                },
                error: function (err) {
                    $("#table-list").html(err);
                }
            });
        }


        $("#modal-input").on("submit", "#input-form", function () {
            var vUrl = $(this).attr('action');
            var vMethod = $(this).attr('method');
            var vData = { Code: $(this).find("#Code").val(), T_Event_Id: $(this).find("#T_Event_Id").val(), Request_By: $(this).find("#Request_By").val(), Request_Date: $(this).find("#Request_Date").val(), Request_Due_Date: $(this).find("#Request_Due_Date").val(), Note : $(this).find("#Note").val() };
            var vItems = [];
            $("#item-body").find('tr').each(function (index) {
                var vItem = { M_Souvenir_Id: $(this).find("#M_Souvenir_Id").val(), Qty: $(this).find("#Qty").val(), Note: $(this).find("#Note").val() };
                vItems.push(vItem);
            });
            $.ajax({
                url: vUrl,
                type: vMethod,
                data: {model : vData, item : vItems},
                success: function (result) {
                    if (result.success) {
                        alert("Data Saved !");
                        $("#modal-input").modal("hide");
                        GetList();
                    } else {
                        alert("Eror! Product has not been saved. \n" + result.message);
                    }
                }
            });
            return false;
        });
    </script>
}