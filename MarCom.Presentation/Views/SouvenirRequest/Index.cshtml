                success: function (result) {
                    if (result.success) {
                        $("#reason-input").modal("hide");
                        $("#modal-input").modal("hide");
                        GetList();
                    } else {
                        alert("Error")
                        GetList();
                    }
                }
            });
        };

    </script>
}