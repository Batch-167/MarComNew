@model MarCom.ViewModel.SouvenirStockViewModel

<div class="panel panel-primary">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Received_By, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.R_Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Received_By, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Received_Date, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Received_Date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Received_Date, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextAreaFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", @readonly="true" } })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="panel panel-primary">
                <div class="row">
                </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-lg-4">
                                    <span>Souvenir Name</span>
                                </th>
                                <th class="col-lg-2">
                                    <span>Qty</span>
                                </th>
                                <th class="col-lg-4">
                                    <span>Note</span>
                                </th>
                                <th class="col-lg-3">
                                    <span>Action</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="item-body"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Details", "SovenirStock", FormMethod.Post, new { @id = "input-form" }))
            {
        @Html.AntiForgeryToken()

        <div align ="right" class="form-actions no-color breadcrumb">
            <input type="button" value="Close" class="btn btn-warning" data-dismiss="modal" />
        </div>
    }
</div>
