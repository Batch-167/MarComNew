@model MarCom.ViewModel.EventViewModel
@using MarCom.Repository

@{
    string code = EventRepo.GetCode();
    string date = DateTime.Now.ToString("dd-MM-yyyy");
}
@using (Html.BeginForm("Add", "Event", FormMethod.Post, new { @id = "input-form" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <table style="padding-bottom:15px">
            <tr class="row">
                <td>
                    <span>Transaction Code</span>
                </td>
                <td>
                    @Html.EditorFor(model => code, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-lg-1"></td>
                <td>
                    <span>Request By</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.NameRequest, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>

            <tr class="row">
                <td>
                    <span>Event Name</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Event_Name, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-lg-1"></td>
                <td>
                    <span>Request Date</span>
                </td>
                <td>
                    @Html.EditorFor(model => date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>

            <tr class="row">
                <td>
                    <span> Event Place</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-lg-1"></td>
                <td>
                    <span>Note</span>
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr class="row">
                <td>
                    Start Date
                </td>
                <td>
                    @Html.EditorFor(model => model.Start_Date, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr class="row">
                <td>
                    End Date
                </td>
                <td>
                    @Html.EditorFor(model => model.End_Date, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr class="row">
                <td>
                    Budget
                </td>
                <td>
                    @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Cancel" class="btn btn-warning" data-dismiss="modal" />
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </div>
}