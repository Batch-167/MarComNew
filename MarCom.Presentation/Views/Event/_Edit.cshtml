@model MarCom.ViewModel.EventViewModel


@using (Html.BeginForm("Edit", "Event", FormMethod.Post, new { @id = "input-form" }))
{
    <div class="form-horizontal">
        <table cellspacing="10">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <tr class="row">
                <td class="col-lg-3">
                    <span>Transaction Code</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" , @readonly="readonly"} })
                </td>
                <td class="col-lg-1"></td>
                <td align="left">
                    <span>Request By</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.NameRequest, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
            <tr></tr>
            <tr class="row">
                <td class="col-lg-3">
                    <span>Event Name</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Event_Name, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-lg-1"></td>
                <td >
                    <span>Request Date</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Request_Date, new { htmlAttributes = new { @Value= Model.Request_Date.ToString("dd-MM-yyyy"), @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
            <tr></tr>
            <tr class="row">
                <td class="col-lg-3">
                    <span>Event Place</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-lg-1"></td>
                <td align="left">
                    <span>Note</span>
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr></tr>
            <tr class="row">
                <td class="col-lg-3">
                    <span>Event Start Date</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Start_Date, new { htmlAttributes = new { @class = "form-control datepicker"} })
                    @Html.ValidationMessageFor(model => model.Start_Date)
                </td>
                <td class="col-lg-1"></td>
                <td align="left">
                    <span>Event End Date</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.End_Date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                </td>
            </tr>
            <tr></tr>
            <tr class="row">
                <td class="col-lg-3">
                    <span>Budget</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td class="col-lg-1"></td>
                <td align="left">
                    <span>Status</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.StatusName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
            <tr></tr>
            <tr class="row">
                <td class="col-lg-3"></td>
                <td></td>
                <td class="col-lg-1"></td>
                <td class="col-lg-2"></td>
                <td>
                    <div>
                        <input type="submit" value="Save" style="resize:both" class="btn btn-primary" /> <input type="button" style="resize:both" value="Cancel" class="btn btn-warning" data-dismiss="modal" />
                    </div>
                </td>
            </tr>
        </table>
    </div>

}
<script type="text/javascript">
    $(function () {
        $('.datepicker').datepicker({ format: 'dd-mm-yyyy' });
    });
</script>