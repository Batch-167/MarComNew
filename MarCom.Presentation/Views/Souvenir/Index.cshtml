<div class="modal fade" tabindex="-1" role="dialog" id="modal-input">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>*@
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



@section Scripts{
    @*@Scripts.Render("~/AdminLTE/plugins/datatables/js")*@

    <script type="text/javascript">
        $(document).ready(function () {
            GetList();
        });

        $("#btn-search").click(function Search() {
            var data = {
                code: $("#Code").val(),
                name: $("#Name").val(),
                unit: $("#Unit").val(),
                date: $("#Date").val(),
                create: $("#Create").val()
            };
            $.ajax({
                url: '@Url.Action("Filter","Souvenir")',
                type: 'post',
                data: data,
                success: function (result) {
                    $("#table-list").html(result);
                },
                error: function (err) {
                    $("#table-list").html(err);
                }
            });
        });

        $("#btn-new").click(function () {
            $(".modal-title").html("Create New Souvenir");
            $.ajax({
                url: '@Url.Action("Create", "Souvenir")',
                type: 'get',
                success: function (result) {
                    $(".modal-body").html(result);
                    $(".modal").modal("show");
                }
            });
            $(".modal").modal("show");
        });

        function GetList() {
            $.ajax({
                url: '@Url.Action("List", "Souvenir")',
                type: 'get',
                success: function (result) {
                    $("#table-list").html(result);
                },
                error: function (err) {
                    $("#table-list").html(err);
                }
            });
        }

        function Action(act, id, name, code) {
            $.ajax({
                url: '/Souvenir/' + act,
                type: 'get',
                data: { id: id },
                dataType: 'html',
                success: function (result) {
                    $('#modal-input').find('.modal-body').html(result);
                    $('#modal-input').modal('show');
                    if (act == "Delete") {
                        $(".modal-title").html(act + " Souvenir");
                    } else {
                        $(".modal-title").html(act + " Souvenir - " + name + " ( " + code + " )");
                    }
                },
            })
        }

        $('#modal-input').on('submit', '#input-form', function () {
            var vUrl = $(this).attr('action');
            var vMethod = $(this).attr('method');
            var vData = $(this).serialize();
            $.ajax({
                name: name,
                url: vUrl,
                method: vMethod,
                data: vData,
                success: function (result) {
                    if (result.success) {
                        alert(result.message);
                        $('#modal-input').modal('hide');
                        GetList();
                    } else {
                        alert(result.message);
                    }
                }
            });
            return false;
        });

    </script>
}