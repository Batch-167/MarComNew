@{
    ViewBag.Title = "Souvenir";
}
@Styles.Render("~/AdminLTE/plugins/datatables/css")
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-12">
                <table>
                    <tr>
                        <td colspan="5"></td>
                        <td class="col-lg-1">
                            <button type="button" id="btn-new" class="btn btn-primary btn-sm">ADD</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-lg-2">
                            <input name="Code" type="text" class="form-control" placeholder="Souvenir Code" />
                        </td>
                        <td class="col-lg-3">
                            <input name="Name" type="text" class="form-control text-box single-line" placeholder="Souvenir Name" />
                        </td>
                        <td class="col-lg-2">
                            <input name="Unit" type="text" class="form-control text-box single-line" placeholder="Select Unit Name" />
                        </td>
                        <td class="col-lg-2">
                            <div class="input-group">
                                <input name="Date" class="form-control datepicker" placeholder="Created" type="date" value="Created" />
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            </div>
                        </td>
                        <td class="col-lg-2">
                            <input name="Create" type="text" class="form-control text-box single-line" placeholder="Create By" />
                        </td>
                        <td class="col-lg-1">
                            <button id="btn-search" type="button" class="btn btn-warning btn-sm" onclick="Search(this)" >Search</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12" id="table-list">
                <h3>Loading . . .</h3>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modal-input">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>*@
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



@section Scripts{
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")

    <script type="text/javascript">
        $(document).ready(function () {
            GetList();
        });

        function Search(obj) {
            var tr = $(obj).closest("tr");
            var code = $(tr).find("Input[name=Code]").val();
            var name = $(tr).find("Input[name=Name]").val();
            var unit = $(tr).find("Input[name=Unit]").val();
            var date = $(tr).find("Input[name=Date]").val();
            var create = $(tr).find("Input[name=Create]").val();
            alert('Halo '+code+ ' '+name+ ' '+unit+' '+date+ ' '+create)
        }

        $("#btn-new").click(function () {
            //alert('Create new button');
            $(".modal-title").html("Create New Souvenir");
            $.ajax({
                url: '@Url.Action("Create", "Souvenir")',
                type: 'get',
                success: function (result) {
                    $(".modal-body").html(result);
                    $(".modal").modal("show");
                }
            });
            $(".modal").modal("show");
        });

        function GetList() {
            $.ajax({
                url: '@Url.Action("List", "Souvenir")',
                type: 'get',
                success: function (result) {
                    $("#table-list").html(result);
                },
                error: function (err) {
                    $("#table-list").html(err);
                }
            });
        }

        function Action(act, id) {
            $.ajax({
                url: '/Souvenir/' + act,
                type: 'get',
                data: { id: id },
                dataType: 'html',
                success: function (result) {
                    $('#modal-input').find('.modal-body').html(result);
                    $('#modal-input').modal('show');
                },
            })
        }

        $('#modal-input').on('submit', '#input-form', function () {
            var vUrl = $(this).attr('action');
            var vMethod = $(this).attr('method');
            var vData = $(this).serialize();
            var info = $(this).attr('name');
            $.ajax({
                name : name,
                url: vUrl,
                method: vMethod,
                data: vData,
                success: function (result) {
                    if (result) {
                        alert(info);
                        $('#modal-input').modal('hide');
                        GetList();
                    } else {
                        alert("Error ")
                    }
                }
            });
            return false;
        });
    </script>
}