@model IEnumerable<MarCom.ViewModel.EmployeeViewModel>
@{
    int row = 0;
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @( row += 1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_By)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_Date)
        </td>
        <td>
            <div class="btn-group-sm">
                <button type="button" class="btn btn-warning btn-view" data-id="@item.Id" title="View" onclick="action('view',@item.Id)">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-success btn-edit" data-id="@item.Id" title="Edit" onclick="action('edit',@item.Id)">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-danger btn-delete" data-id="@item.Id" title="Delete" onclick="action('delete',@item.Id)">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </td>
    </tr>
}